  "dependencies": {
    "@babel/cli": "7.10.5",
    "@babel/core": "7.11.4",
    "@babel/preset-env": "7.11.0",
    "@types/cron": "1.7.2",
    "@types/lodash": "4.14.161",
    "@types/node": "12.12.5",
    "@types/nodemailer": "6.4.0",
    "@types/pg": "7.14.4",
    "@types/restify": "8.4.2",
    "@types/restify-errors": "4.3.3",
    "@types/uuid": "8.3.0",
    "btoa": "1.2.1",
    "cron": "1.8.2",
    "cross-env": "7.0.2",
    "date-fns": "2.16.1",
    "lodash": "4.17.20",
    "node-fetch": "2.6.1",
    "nodemailer": "6.4.11",
    "pg": "8.3.3",
    "restify": "8.5.1",
    "restify-errors": "8.0.2",
    "typescript": "4.0.2",
    "uuid": "8.3.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "eslint": "7.7.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-node": "11.1.0",
    "lint-staged": "10.2.13",
    "nodemon": "2.0.4",
    "prettier": "2.1.1",
    "ts-node": "9.0.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --max-old-space-size=4096",
    "build": "tsc --outDir tsOutput && babel tsOutput -s -D -d dist && rm -rf tsOutput",
    "format": "prettier --write \"src/**/*.{json,md,ts,tsx,css,scss}\"",
    "lint": "node ./node_modules/eslint/bin/eslint.js --ext .ts --ext .tsx src",
    "pre-commit": "lint-staged",
    "pre-push": "npm run lint && npm run typecheck",
    "typecheck": "tsc --noEmit",
    "//": "cleanup is needed if you build the project some other way. js-files will mess things up for some reason",
    "cleanup": "find ./src -name \"*.js\" -type f -delete && find ./src -name \"*.js.map\" -type f -delete"
  },
  "lint-staged": {
    "*.{json,md,css,scss}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "node ./node_modules/eslint/bin/eslint.js --fix",
      "prettier --write"
    ]
  }
}
