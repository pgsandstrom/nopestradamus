  "dependencies": {
    "@babel/cli": "7.6.4",
    "@babel/core": "7.6.4",
    "@babel/preset-env": "7.6.3",
    "@types/cron": "1.7.2",
    "@types/node": "12.12.5",
    "@types/nodemailer": "4.6.6",
    "@types/pg": "7.11.2",
    "@types/restify": "7.2.8",
    "@types/restify-errors": "4.3.3",
    "@types/uuid": "3.4.4",
    "btoa": "1.2.1",
    "cron": "1.8.2",
    "cross-env": "7.0.2",
    "date-fns": "2.15.0",
    "lodash": "4.17.19",
    "node-fetch": "2.3.0",
    "nodemailer": "5.1.1",
    "pg": "7.9.0",
    "restify": "8.1.1",
    "restify-errors": "7.0.0",
    "typescript": "3.9.7",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@types/jest": "24.0.11",
    "@typescript-eslint/eslint-plugin": "3.9.0",
    "@typescript-eslint/parser": "3.9.0",
    "eslint": "7.7.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-node": "11.1.0",
    "jest": "24.5.0",
    "lint-staged": "10.2.11",
    "nodemon": "1.18.10",
    "prettier": "2.0.5",
    "sinon": "7.2.7",
    "ts-jest": "24.0.0",
    "ts-node": "8.0.3"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --max-old-space-size=4096",
    "build": "tsc --outDir tsOutput && babel tsOutput -s -D -d dist && rm -rf tsOutput",
    "format": "prettier --write \"src/**/*.{json,md,ts,tsx,css,scss}\"",
    "lint": "node ./node_modules/eslint/bin/eslint.js --ext .ts --ext .tsx src",
    "pre-commit": "lint-staged",
    "pre-push": "cross-env CI=true npm run test && npm run typecheck",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "//": "cleanup is needed if you build the project some other way. js-files will mess things up for some reason",
    "cleanup": "find ./src -name \"*.js\" -type f -delete && find ./src -name \"*.js.map\" -type f -delete"
  },
  "lint-staged": {
    "*.{json,md,css,scss}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "node ./node_modules/eslint/bin/eslint.js --fix",
      "prettier --write"
    ]
  }
}
