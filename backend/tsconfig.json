{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2016"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "node_modules", "src/styles"],
  "include": ["src/**/*", "../shared"]
}
